<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/data"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/predio"
        android:layout_alignBottom="@+id/predio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <TextView
        android:id="@+id/hora"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/data"
        android:layout_alignLeft="@+id/data"
        android:layout_alignStart="@+id/data" />

    <TextView
        android:id="@+id/n_dala"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/hora"
        android:layout_alignLeft="@+id/hora"
        android:layout_alignStart="@+id/hora" />

    <TextView
        android:text="Sala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hora_label"
        android:layout_alignStart="@+id/hora_label"
        android:id="@+id/textView3"
        android:layout_below="@+id/hora" />

    <TextView
        android:text="Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data_label"
        android:layout_above="@+id/data"
        android:layout_alignLeft="@+id/data"
        android:layout_alignStart="@+id/data"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="Hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hora_label"
        android:layout_below="@+id/data"
        android:layout_alignLeft="@+id/data_label"
        android:layout_alignStart="@+id/data_label" />

    <TextView
        android:id="@+id/predio"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_width="180dp"
        android:layout_below="@+id/nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Predio:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:id="@+id/predio_label"
        android:layout_above="@+id/data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>